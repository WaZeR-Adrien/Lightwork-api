<nav>
    <div class="nav-wrapper purple lighten-1">
        <!-- on mobile -->
        <a data-target="slide-out" class="sidenav-trigger" href="#"><i class="material-icons">menu</i></a>

        <a href="{{ g_path }}docs" class="center brand-logo">{{ g_api_name }} - Documentation</a>
        <ul class="right hide-on-med-and-down">
            <li class="sidenav-trigger logout" style="display: none;"><a><i class="material-icons">exit_to_app</i></a></li>
        </ul>
    </div>
</nav>

<ul id="slide-out" class="sidenav sidenav-fixed">
    <li>
        <div class="user-view">
            <div class="background">
                <img src="{{ g_img }}background.jpg">
            </div>
            <a><span class="white-text name">{{ g_api_name }}</span></a>
            <a><span class="white-text email">Documentation</span></a>
        </div>
    </li>
    <li>
        <a href="{{ g_path }}docs" class="sidenav-close waves-effect"><i class="material-icons">home</i>Home</a>
    </li>
    <li>
        <div class="divider"></div>
    </li>
    <li>
        <a class="subheader">References</a>
    </li>
    {% for key, routes in refs|ksort %}
        <li>
            <a class="sidenav-close waves-effect btn-ref" data-ref="{{ key|lower }}" href="{{ g_path }}docs/routes#{{ key }}">
                <i class="material-icons">label_outline</i>{{ key|capitalize }}
            </a>
        </li>
    {% endfor %}
</ul>