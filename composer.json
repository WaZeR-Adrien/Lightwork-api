{
    "name": "Lightwork-API",
    "version": "5.0.3",
    "require": {
        "twig/twig": "2.*",
        "phpmailer/phpmailer": "~6.0",
        "greencape/xml-converter": "1.1.0",
        "nette/php-generator": "3.0.0",
        "symfony/yaml": "~3.4",
        "jasny/phpdoc-parser": "dev-master", 
        "adrienm/collection": "1.*",
        "adrienm/logger": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.1",
        "crashuxx/phockito": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Controllers\\": "app/controllers",
            "Models\\": "app/models",
            "Kernel\\": "kernel",
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "start": [
            "Kernel\\Cli\\CLI::run"
        ],
        "generate-models": [
            "Kernel\\Cli\\CLI::generateEntities"
        ]
    }
}
